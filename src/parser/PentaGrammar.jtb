  	"INSTRUMENT" "=" < ID > ";"
}

void StropheDeclaration() : { }
{
  	"STROPHE" < ID > "{" ( Sequence() )? "}"
}

void Essay() : { }
{
  	"ESSAY" < ID > "{" ( Sequence() )? "}"
}

void Sequence() : { }
{
	( Notes() )+
}

void Notes() : { }
{
   	Beat() | < ID >
}

void Beat() : { }
{
   	( Sign() )+  < ENDOFBEAT >
}


void Sign() : { }
{
	Group() | Single() 
}

void Group() : { }
{
	"[" Note() ( Others() )* "]"  Flagged()  
