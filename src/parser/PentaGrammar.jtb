	"," Note()
}

void Single() : { }
{
	( Note() | <  SILENCE > ) Duration() 
}

void Note() : { }
{
	( < SEMITUNE > )? < TUNE > 
}

void Duration() : { }
{
	(Flagged() | Unflagged()) (< DOT >)? (Extend())*
}

void Extend() : { }
{
	 (< CROSSBEAT >)? (Flagged() | Unflagged()) (< DOT >)? 
}

void Flagged() : { }
{
	< QUAVER > | < SEMIQUAVER >  | < DEMISEMIQUAVER >  | < HEMIDEMISEMIQUAVER >
}

void Unflagged() : { }
{
	< SEMIBREVE > | < MINIM > | < CROTCHET >
}



